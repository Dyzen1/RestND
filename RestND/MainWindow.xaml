<Window x:Class="RestND.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">

    <Grid Background="{DynamicResource PageBG}">

        <!-- Sidebar Expander -->
        <Expander ExpandDirection="Down" 
                  IsExpanded="False" BorderThickness="0" 
                  Foreground="{DynamicResource LightText}">
            <uc:SideBar x:Name="MenuPanel" Width="100"/>
        </Expander>

        <Grid Width="600" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="table" Background="Transparent">
                <Image Style="{DynamicResource tableBtn}"/>
            </Button>
        </Grid>
    </Grid>
</Window>
