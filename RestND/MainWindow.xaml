<Window x:Class="RestND.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800">

    <Grid Background="{DynamicResource PageBG}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Expander -->
        <Expander ExpandDirection="Down" 
                  IsExpanded="False" BorderThickness="0" 
                  Foreground="{DynamicResource LightText}">
            <uc:SideBar x:Name="MenuPanel" Width="100"/>
        </Expander>

    </Grid>
</Window>
