<UserControl x:Class="RestND.MVVM.View.UserControls.DishTypesSideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="450">
    <Grid>
        <!-- vertical rail -->
        <ListBox x:Name="List"
                 ItemsSource="{Binding DishTypes, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 SelectedItem="{Binding SelectedDishType, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                 BorderThickness="0"
                 Background="Transparent"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 Padding="0" >
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="0,6,0,0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <Border x:Name="bd"
                                        CornerRadius="8"
                                        Background="{DynamicResource secondaryHeaders}"
                                        BorderBrush="{DynamicResource secondaryHeaders}"
                                        BorderThickness="1"
                                        SnapsToDevicePixels="True">
                                    <ContentPresenter Margin="10,8" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="{DynamicResource LightText}"/>
                                        <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                        <Setter Property="Foreground" Value="{DynamicResource LightBG}"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <!-- pill with (optional) icon + name -->
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <!-- If you later add an icon converter, place an Image here -->
                        <TextBlock Text="{Binding DishType_Name}"
                                   Margin="6,0,6,0"
                                   VerticalAlignment="Center"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource LightText}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
