<UserControl x:Class="RestND.MVVM.View.UserControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestND.MVVM.View.UserControls"
             xmlns:fa="http://schemas.fontawesome.com/icons/svg"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="200">
    <Grid>
        
        <StackPanel x:Name="menuePanel">
            <Button Style="{DynamicResource SideBarBtn}">
                <StackPanel>
                    <fa:SvgAwesome Icon="Solid_TruckFast" Width="15" PrimaryColor="{DynamicResource LightText}"/>
                    <TextBlock Text="Inventory"/>
                </StackPanel>
            </Button>
            <Button Style="{DynamicResource SideBarBtn}">
                <StackPanel>
                    <fa:SvgAwesome Icon="Solid_Users" Style="{DynamicResource SideBarIcon}"/>
                    <TextBlock Text="Employees"/>
                </StackPanel>
            </Button>
            <Button Style="{DynamicResource SideBarBtn}">
                <StackPanel>
                    <fa:SvgAwesome Icon="Solid_BowlFood" Style="{DynamicResource SideBarIcon}"/>
                    <TextBlock Text="Dishes"/>
                </StackPanel>
            </Button>
            <Button Style="{DynamicResource SideBarBtn}">
                <StackPanel>
                    <fa:SvgAwesome Icon="Solid_FileExport" Style="{DynamicResource SideBarIcon}"/>
                    <TextBlock Text="Reports"/>
                </StackPanel>
            </Button>
        </StackPanel>   
        
    </Grid>
</UserControl>
