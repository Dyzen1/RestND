<UserControl x:Class="RestND.MVVM.View.UserControls.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestND.MVVM.View.UserControls"
             mc:Ignorable="d" 
             xmlns:fa="http://schemas.fontawesome.com/icons/svg"
             x:Name="root"
             MaxWidth="180" MaxHeight="40">
    <Border Style="{DynamicResource windowBorder}" BorderThickness="2">
        <Grid>
            <!-- The real input -->
            <TextBox x:Name="PART_TextBox" Width="150"
                     BorderThickness="0" Margin="28 0 0 0"
                     Background="Transparent"
                     VerticalContentAlignment="Center"
                     Text="{Binding SearchText, ElementName=root, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     TextChanged="PART_TextBox_TextChanged"/>
            <fa:SvgAwesome Icon="Solid_MagnifyingGlass" Width="15" 
                           PrimaryColor="{DynamicResource LightText}"
                           HorizontalAlignment="Left" Margin="5 0 0 0"/>
            <!-- Watermark (shows when empty + not focused) -->
            <TextBlock Margin="28,0,0,0" 
                           Foreground="{DynamicResource secondaryHeaders}"
                           Text="{Binding Placeholder, ElementName=root}"
                           IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="10"/>
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Text, ElementName=PART_TextBox}" Value=""/>
                                    <Condition Binding="{Binding IsKeyboardFocused, ElementName=PART_TextBox}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

        </Grid>
    </Border>
    
</UserControl>
