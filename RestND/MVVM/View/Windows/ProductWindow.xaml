<Window x:Class="RestND.MVVM.View.ProductWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:products="clr-namespace:RestND.MVVM.ViewModel"
      xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
      xmlns:fa="http://schemas.fontawesome.com/icons/svg"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="900"
      WindowState="Maximized"
      d:DataContext="{d:DesignInstance Type=products:ProductViewModel, IsDesignTimeCreatable=True}"
      Background="{DynamicResource DarkText}" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border BorderBrush="{DynamicResource LightText}"
        BorderThickness="3"
        CornerRadius="10"
        Padding="2,6,0,0">

        <Grid Margin="20 5 20 10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0 0 0 10">

                <StackPanel Orientation="Horizontal">
                    <Label Content="New Product Name:" Foreground="{DynamicResource LightText}" VerticalAlignment="Center"/>
                    <TextBox Width="150" Background="Transparent" VerticalAlignment="Center"
                             Foreground="{DynamicResource LightText}" Height="20"
                             BorderBrush="{DynamicResource LightText}"
                             Text="{Binding NewProduct.Product_Name, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.ToolTip>Product Name</TextBox.ToolTip>
                    </TextBox>

                    <Label Content="Quantity In Stock:" Foreground="{DynamicResource LightText}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <TextBox Background="Transparent"
                             Text="{Binding NewProduct.Quantity_Available, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="{DynamicResource LightText}" Width="150" Height="20"
                             BorderBrush="{DynamicResource LightText}" VerticalAlignment="Center">
                        <TextBox.ToolTip>Quantity Available</TextBox.ToolTip>
                    </TextBox>

                    <Button Margin="50,0,0,0" Command="{Binding AddProductCommand}" Style="{DynamicResource addBtn}" VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <fa:SvgAwesome Style="{DynamicResource addBtnIcon}"/>
                            <TextBlock Text="Add Product" FontSize="13" Foreground="{DynamicResource LightText}" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Button>
                    </StackPanel>
                </Grid>

                <Border BorderBrush="{DynamicResource LightText}"
                        BorderThickness="3"
                        Padding="1"
                        Grid.Row="1"
                        CornerRadius="10">

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              RowBackground="Transparent"
                              CanUserAddRows="False"
                              Background="{DynamicResource CardBG}"
                              Foreground="{DynamicResource DarkText}"
                              BorderBrush="Transparent"
                              HeadersVisibility="Column"
                              ColumnWidth="*" BorderThickness="0">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Product ID:" Binding="{Binding Product_ID}" />
                            <DataGridTextColumn Header="Product Name:" Binding="{Binding Product_Name}" />
                            <DataGridTextColumn Header="Quantity Available:" Binding="{Binding Quantity_Available}" />
                            <DataGridTextColumn Header="Tolerance:" Binding="{Binding Tolerance}" />
                        </DataGrid.Columns>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                <Setter Property="BorderThickness" Value="1,1,0,1"/>
                            </Style>
                        </DataGrid.RowStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{DynamicResource DataGridHeader}"/>
                                <Setter Property="Padding" Value="4"/>
                                <Setter Property="Foreground" Value="{DynamicResource DarkText}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource DarkText}"/>
                                <Setter Property="BorderThickness" Value="1,0,0,0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                    </DataGrid>

                </Border>

                <Grid Grid.Row="2">

                    <uc:ReturnBtn x:Name="returnBtn" />

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                Margin="0,10,20,0">
                        <Button Style="{DynamicResource editBtn}"
                                Command="{Binding UpdateProductCommand}">
                            <fa:SvgAwesome Style="{DynamicResource editBtnIcon}"/>
                        </Button>
                        
                        <Button Style="{DynamicResource deleteBtn}" Margin="0,0,0,0"
                                Command="{Binding DeleteProductCommand}" >
                            <fa:SvgAwesome Style="{DynamicResource deleteBtnIcon}"/>
                        </Button>
                    </StackPanel>
                    
                </Grid>
        </Grid>
    </Border>
</Window>
