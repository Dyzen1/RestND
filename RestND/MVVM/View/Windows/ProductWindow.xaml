<Window x:Class="RestND.MVVM.View.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:RestND.MVVM.ViewModel"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        Title="Product Manager" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>
        <Image Style="{DynamicResource BG_image}"/>
        
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- New Product Form -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox Width="200" Margin="0 0 10 0" Background="{DynamicResource CardBG}" Height="20"
                         Text="{Binding NewProduct.Product_Name, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.ToolTip>Product Name</TextBox.ToolTip>
                </TextBox>

                <TextBox Width="100" Margin="0 0 10 0" Background="{DynamicResource CardBG}" Height="20"
                         Text="{Binding NewProduct.Quantity_Available, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.ToolTip>Quantity Available</TextBox.ToolTip>
                </TextBox>

                <Button Command="{Binding AddProductCommand}" Style="{DynamicResource addBtn}">
                    <StackPanel Orientation="Horizontal">
                        <fa:SvgAwesome Style="{DynamicResource addBtnIcon}"/>
                        <TextBlock Text="Add Product" FontSize="10" TextAlignment="Center" Foreground="{DynamicResource LightText}" Margin="4"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Product List -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Products}"
                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                      AutoGenerateColumns="True"
                      Margin="0 0 0 10" Background="{DynamicResource CardBG}"/>

            <!-- Update/Delete Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource updateBtn}" 
                        Command="{Binding UpdateProductCommand}"/>
                <Button Content="Delete" 
                        Command="{Binding DeleteProductCommand}" />
            </StackPanel>

            <Button x:Name="return" Grid.Row="2" 
                    HorizontalAlignment="Left" Click="return_Click">
                <fa:SvgAwesome Style="{DynamicResource returnBtnIcon}"/>
            </Button>

        </Grid>
    </Grid>
</Window>
