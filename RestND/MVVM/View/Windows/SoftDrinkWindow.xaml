<Window x:Class="RestND.MVVM.View.Windows.SoftDrinkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:vm="clr-namespace:RestND.MVVM.ViewModel.Dishes"
        mc:Ignorable="d"
        Title="Soft Drinks"
        Style="{StaticResource windowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        FocusManager.FocusedElement="{Binding ElementName=NameBox}">

    <Window.DataContext>
        <vm:SoftDrinkViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Style="{DynamicResource windowBorder}">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Expander Style="{DynamicResource sideBarExpander}"
                    Grid.RowSpan="3" Grid.Column="2">
                <uc:SideBar/>
            </Expander>

            <!-- search bar by drink name -->
            <uc:SearchBar x:Name="DrinkSearch" Grid.Row="0" Grid.Column="1" 
              Margin="8 15 0 0" HorizontalAlignment="Left"
              Placeholder="Search by drink name"/>

            <!-- ========== Right: Existing soft drinks grid ========== -->
            <Border Grid.Column="1" Grid.Row="1" Margin="8"
                    Style="{DynamicResource windowBorder}">
                <DataGrid ItemsSource="{Binding SoftDrinks}"
                          SelectedItem="{Binding SelectedSoftDrink, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}"
                          RowStyle="{DynamicResource rowStyle}"
                          CellStyle="{DynamicResource cellStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Drink_Name}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Drink_Price, StringFormat={}{0:F2}}" Width="90"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- ========== Left: new drink form ========== -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="New Drink Details"
                      Margin="20 0 18 8">
                <StackPanel Margin="10" >
                    <Label Content="Drink Name:" Foreground="{DynamicResource LightText}"/>
                    <TextBox x:Name="NameBox"
                             Text="{Binding DrinkName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"/>

                    <Label Content="Price:" Foreground="{DynamicResource LightText}"/>
                    <TextBox Text="{Binding DrinkPrice, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:F2}}"
                             Margin="0,0,0,8"/>

                    <Label Content="Quantity:" Foreground="{DynamicResource LightText}"/>
                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8"/>

                    <TextBlock Text="{Binding ErrorMessage}"
                               Style="{DynamicResource errorMessage}"
                               TextWrapping="Wrap" Margin="0,6,0,0"/>

                    <!-- Add Drink Button -->
                    <Button Content="Add Drink"
                            Command="{Binding SaveCommand}"
                            Style="{DynamicResource SubmitBtn}" Margin="0,0,6,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Footer -->
            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center" Margin="0 0 0 20">
                <Button Content="Update Drink"
                        Command="{Binding UpdateCommand}"
                        Style="{DynamicResource SubmitBtn}"/>
                <Button Content="Delete Drink"
                        Command="{Binding DeleteCommand}"
                        Style="{DynamicResource SubmitBtn}"
                        Margin="20,0,0,0"/>
            </StackPanel>
            
            <uc:ReturnBtn Grid.Column="0" VerticalAlignment="Bottom" Margin="0,0,0,15"
                          Grid.Row="2"/>
            <TextBlock Grid.Column="1" Grid.Row="2" Style="{DynamicResource copyWrite}"
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>
        </Grid>
    </Border>
</Window>
