<Window x:Class="RestND.MVVM.View.Windows.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND.MVVM.View.Windows"
        xmlns:uc ="clr-namespace:RestND.MVVM.View.UserControls"
        mc:Ignorable="d"
        Title="ForgotPasswordWindow"
        Height="300" Width="400"
        Style="{StaticResource popupStyle}"
        WindowStartupLocation="CenterOwner"
        >
    
    <Grid>
        <Border Style="{ DynamicResource windowBorder}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <Label Content ="ID Number:" Foreground="{DynamicResource LightText}" 
                       HorizontalAlignment="Center" Width="82"/>
                
                <TextBox Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Content="Email:" Foreground="{DynamicResource LightText }"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0" Width="50"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                <Button Content="Send Link"
                        Command="{Binding SendRestLinkCommand }"
                        Style="{DynamicResource frGotPassword }"/>
            </StackPanel>

        </Border>
        <uc:ReturnBtn VerticalAlignment="Bottom" Margin="15,0,0,15"/>
        <TextBlock Style="{DynamicResource copyWrite }"/>















    </Grid>
</Window>
