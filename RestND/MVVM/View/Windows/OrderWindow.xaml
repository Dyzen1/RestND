<Window x:Class="RestND.MVVM.View.Windows.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RestND.MVVM.View.Windows" 
      xmlns:fa="http://schemas.fontawesome.com/icons/svg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      WindowState="Maximized"
      Background="{DynamicResource DarkText}" WindowStyle="None" MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="2" >
            <Button x:Name="MinimizeBtn" Content="_" Width="40" Height="25" 
            Background="Transparent" BorderBrush="Transparent"
            Click="MinimizeBtn_Click" Foreground="{DynamicResource LightText}"/>
            <Button x:Name="MaximizeBtn" Content="🗖" Width="40" Height="25" 
            Background="Transparent" BorderBrush="Transparent"
            Click="MaximizeBtn_Click" Foreground="{DynamicResource LightText}"/>
            <Button x:Name="CloseBtn" Content="X" Width="40" Height="25" 
            Background="Transparent" BorderBrush="Transparent"
            Click="CloseBtn_Click" Foreground="{DynamicResource LightText}"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Button x:Name="return" Grid.Column="0"
                    Style="{DynamicResource returnBtn}" Click="return_Click"
                    HorizontalAlignment="Left">
                <fa:SvgAwesome Style="{DynamicResource returnBtnIcon}"/>
            </Button>
        </Grid>
        
    </Grid>
</Window>
