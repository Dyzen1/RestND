<Window x:Class="RestND.MVVM.View.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND.MVVM.View.Windows"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d"
        Style="{StaticResource windowStyle}"
        Title="OrderWindow">

    <Border Style="{StaticResource windowBorder}">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <!-- Top header strip -->
            <Border Background="#22343f"
                    BorderBrush="CadetBlue"
                    BorderThickness="1"
                    Grid.ColumnSpan="3"
                    Margin="8,2,8,14"
                    CornerRadius="10"/>

            <!-- Top info row -->
            <Grid Grid.ColumnSpan="3" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Waiter's Name:"
                               Foreground="{DynamicResource LightText}"
                               Opacity="0.7" FontSize="12" Margin="0,20,0,0"/>
                    <TextBlock Text="{Binding DataContext.CurrentOrder.assignedEmployee.Employee_Name,
                              RelativeSource={RelativeSource AncestorType=Window},
                              TargetNullValue=—}"
                               Foreground="{DynamicResource LightText}"
                               FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Diners"
                               Foreground="{DynamicResource LightText}"
                               Opacity="0.7" FontSize="12" Margin="0,20,0,4"/>
                    <TextBlock Text="{Binding DataContext.CurrentOrder.People_Count,
                              RelativeSource={RelativeSource AncestorType=Window}}"
                               Foreground="{DynamicResource LightText}"
                               FontSize="12" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>

                <uc:SearchBar x:Name="DishSearch"
                              Grid.Column="2"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Placeholder="Search for a product" Height="32"/>
            </Grid>

            <!-- Dish types (left sidebar) -->
            <ListBox Grid.Column="0" Grid.Row="1" Margin="10 0 10 0"
                     ItemsSource="{Binding DishTypes}"
                     SelectedItem="{Binding SelectedDishType, Mode=TwoWay}"
                     DisplayMemberPath="DishType_Name"
                     BorderThickness="0"
                     Background="Transparent"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin" Value="0,6,0,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border x:Name="bd"
                                            CornerRadius="8"
                                            Background="{DynamicResource secondaryHeaders}"
                                            BorderBrush="{DynamicResource secondaryHeaders}"
                                            BorderThickness="1"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter Margin="10,8" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                            <Setter TargetName="bd" Property="Background" Value="{DynamicResource secondaryBtns}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="BorderBrush" Value="{DynamicResource LightText}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!-- Available dishes (drag source) -->
            <ListView x:Name="DishList"
                      Grid.Column="1" Grid.Row="1"
                      BorderBrush="Transparent"
                      ItemsSource="{Binding AvailableDishes}"
                      ItemContainerStyle="{StaticResource DishesListView}"
                      ItemTemplate="{StaticResource DishSquare}"
                      Background="Transparent"
                      Foreground="{DynamicResource LightText}"
                      PreviewMouseLeftButtonDown="DishList_PreviewMouseLeftButtonDown"
                      MouseMove="DishList_MouseMove">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="8" />
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>

            <Border Grid.Column="1" Grid.Row="1"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource LightText}"
                    CornerRadius="10 0 0 10" Margin="0 2 0 0"/>

            <!-- Order summary (drop target) -->
            <Border Grid.Column="2" Grid.Row="1"
                    BorderThickness="0 1 1 1"
                    BorderBrush="{DynamicResource LightText}"
                    CornerRadius="0 10 10 0" Margin="0 2 8 0">

                <ListView x:Name="OrderList"
                          ItemsSource="{Binding OrderItems}"
                          ItemContainerStyle="{StaticResource DishesListView}"
                          ItemTemplate="{StaticResource DishChoice}"
                          BorderBrush="Transparent"
                          Background="Transparent"
                          Foreground="{DynamicResource LightText}"
                          AllowDrop="True"
                          DragOver="OrderList_DragOver"
                          Drop="OrderList_Drop">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                </ListView>
            </Border>

            <!-- Printing btn's -->
            <StackPanel Grid.Row="2" Grid.Column="2" 
                        Margin="0 0 8 0" Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Style="{DynamicResource PrintOrderBtn}"/>
                <Button Style="{DynamicResource PrintBillBtn}"
                        Command="{Binding PrintBillCommand}"/> 
            </StackPanel>

            <uc:ReturnBtn x:Name="returnBtn" Grid.Row="2"
                          VerticalAlignment="Bottom" Margin="15,0,0,15"/>
            <TextBlock Style="{StaticResource copyWrite}" 
                       Grid.ColumnSpan="3" Grid.Row="3"/>

        </Grid>

    </Border>

</Window>
