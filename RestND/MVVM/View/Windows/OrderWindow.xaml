<Window x:Class="RestND.MVVM.View.Windows.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND.MVVM.View.Windows"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        mc:Ignorable="d" Style="{StaticResource windowStyle}"
        Title="OrderWindow">

    <Border Style="{StaticResource windowBorder}">

        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border Background="#22343f" BorderBrush="CadetBlue" BorderThickness="1"
                    Grid.ColumnSpan="3" Margin="8" CornerRadius="10"/>

            <uc:DishTypesSideBar Grid.Column="0"
                                 DishTypes="{Binding DishTypes}"
                                 SelectedDishType="{Binding SelectedDishType, Mode=TwoWay}"
                                 SelectCommand="{Binding ApplyDishTypeFilterCommand}"/>

            <!-- RIGHT: dish cards grid that shows filtered results -->
            <ItemsControl Grid.Column="2"
                      ItemsSource="{Binding AvailableDishes}">
            </ItemsControl>

            <Grid Grid.ColumnSpan="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Waiter's Name"
               Foreground="{DynamicResource LightText}"
               Opacity="0.7" FontSize="11" Margin="0,20,0,0"/>
                    <TextBlock Text="{Binding DataContext.CurrentOrder.assignedEmployee.Employee_Name,
                              RelativeSource={RelativeSource AncestorType=Window},
                              TargetNullValue=—}"
               Foreground="{DynamicResource LightText}"
               FontSize="13"/>
                </StackPanel>


                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Dinner's"
               Foreground="{DynamicResource LightText}"
               Opacity="0.7" FontSize="11" Margin="0,20,0,4"/>
                    <TextBlock Text="{Binding DataContext.CurrentOrder.People_Count,
                              RelativeSource={RelativeSource AncestorType=Window}}"
                               Foreground="{DynamicResource LightText}"
                               FontSize="13"/>
                </StackPanel>

                <uc:SearchBar x:Name="DishSearch" Grid.Row="1" Grid.Column="2"
                              Placeholder="Search for a product" Height="32"/>

            </Grid>

            <Border Grid.Column="1" Grid.Row="1"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource LightText}"
                    CornerRadius="10 0 0 10" Margin="0 2 0 0">
                <TextBlock Text="Dishes here" Foreground="{DynamicResource LightText}"
                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Column="2" Grid.Row="1"
                    BorderThickness="0 1 1 1"
                    BorderBrush="{DynamicResource LightText}"
                    CornerRadius="0 10 10 0" Margin="0 2 8 0">
                <TextBlock Text="Order choices here" Foreground="{DynamicResource LightText}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <StackPanel Grid.Row="2" Grid.Column="2" 
                        Margin="0 0 8 0" Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Style="{DynamicResource PrintOrderBtn}"
                        Margin="0 0 15 0"/>
                <Button Style="{DynamicResource PrintBillBtn}"
                        Command="{Binding PrintBillCommand}"/> <!--not ready yet!-->
            </StackPanel>
            
            <uc:ReturnBtn x:Name="returnBtn" Grid.Row="2"
                          VerticalAlignment="Bottom" Margin="15,0,0,15"/>
            <TextBlock Style="{StaticResource copyWrite}" 
                       Grid.ColumnSpan="3" Grid.Row="3"/>

        </Grid>
        
    </Border>
    
</Window>
