<Window x:Class="RestND.MVVM.View.Windows.OrdersHistory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND.MVVM.View.Windows"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:conv="clr-namespace:RestND.Converters"
        mc:Ignorable="d"
        Title="OrdersHistory" Style="{DynamicResource windowStyle}">

    <Border Style="{DynamicResource windowBorder}">
        <Grid Margin="40 10 0 0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Expander Style="{DynamicResource sideBarExpander}"
                    Grid.RowSpan="2" Grid.Column="1">
                <uc:SideBar/>
            </Expander>

            <GroupBox Header="Orders History">
                <Border Style="{DynamicResource windowBorder}" Margin="8">
                    <DataGrid RowStyle="{DynamicResource rowStyle}"
          ItemsSource="{Binding AllOrders}"
          CellStyle="{DynamicResource cellStyle}"
          HeadersVisibility="Column"
          AutoGenerateColumns="False"
          ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}"
          IsReadOnly="True"
          CanUserAddRows="False">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Order ID"
                            Binding="{Binding Order_ID}"
                            Width="Auto"/>

                            <DataGridTextColumn Header="Waiter"
                            Binding="{Binding assignedEmployee.Employee_Name}"
                            Width="Auto"/>

                            <DataGridTextColumn Header="Table"
                            Binding="{Binding Table.Table_Number}"
                            Width="Auto"/>

                            <DataGridTextColumn Header="Status"
                            Binding="{Binding StatusText}"
                            Width="Auto"/>

                            <!-- Optional: how many items/dishes in the order -->
                            <DataGridTextColumn Header="Items"
                            Binding="{Binding DishInOrder.Count}"
                            Width="Auto"/>

                        </DataGrid.Columns>
                    </DataGrid>

                </Border>
            </GroupBox>

            <uc:ReturnBtn x:Name="returnBtn" VerticalAlignment="Center" Grid.Row="1"/>
            <TextBlock Style="{DynamicResource copyWrite}" Grid.Row="1" 
                       VerticalAlignment="Center" Margin="0"/>

        </Grid>
    </Border>
    
</Window>
