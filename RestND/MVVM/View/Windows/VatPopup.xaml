<Window x:Class="RestND.MVVM.View.Windows.VatPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestND.MVVM.View.Windows"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:conv="clr-namespace:RestND.Converters"
        mc:Ignorable="d"
        Title="VatPopup" Style="{DynamicResource popupStyle}"
        Width="400" Height="320" WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Border Style="{DynamicResource windowBorder}">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Manage VAT" Grid.Row="0"
                       Foreground="{DynamicResource LightText}"
                       FontWeight="Bold"
                       FontSize="16"/>

            <GroupBox Grid.Row="1" Header="Existing VAT">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="Current Rate:" Width="100"/>
                    <TextBlock Text="{Binding CurrentRate.Percentage}" VerticalAlignment="Center" 
                               Foreground="{DynamicResource LightText}"/>
                    <Label Content="%" FontSize="15" Width="25"/> 
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="2" Header="Update VAT Rate">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="New Rate:" Width="75"/>
                    <TextBox Text="{Binding NewRateInput, UpdateSourceTrigger=PropertyChanged}"
                             Width="50"/>
                    <Label Content="%" FontSize="15" Width="25"/>
                </StackPanel>
            </GroupBox>

            <StackPanel Orientation="Vertical" Grid.Row="3"
                        HorizontalAlignment="Center">
                <TextBlock Text="{Binding ErrorMessage}"
                           Margin="0,15,0,20"
                           Style="{DynamicResource errorMessage}"/>
                <Button Content="Update"
                        Style="{DynamicResource SubmitBtn}"
                        Command="{Binding UpdateVatCommand}"/>
            </StackPanel>

            <uc:ReturnBtn x:Name="returnBtn" VerticalAlignment="Bottom" Grid.Row="3"/>
            <TextBlock Style="{DynamicResource copyWrite}" Grid.Row="3" VerticalAlignment="Bottom" Margin="0"/>

        </Grid>
    </Border>
    
</Window>
