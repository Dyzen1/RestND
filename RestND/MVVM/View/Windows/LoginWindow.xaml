<Window x:Class="RestND.MVVM.View.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls"
         xmlns:vm="clr-namespace:RestND.MVVM.ViewModel.Employees"
        mc:Ignorable="d"
        Style="{StaticResource popupStyle}"
        Title="Admin Login"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    
    <Window.InputBindings>
        <!-- Enter anywhere in the window triggers the command -->
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
    </Window.InputBindings>


    <Grid>
        <Border Style="{DynamicResource windowBorder}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                <Label Content="ID Number:" Foreground="{DynamicResource LightText}"
                       HorizontalContentAlignment="Center"/>

                <!-- Bind to EmployeeId (int) -->
                <TextBox Text="{Binding EmployeeId, UpdateSourceTrigger=PropertyChanged}"
                         />

                <Label Content="Password:" Foreground="{DynamicResource LightText}"
                       HorizontalContentAlignment="Center" Margin="0,10,0,0"/>

                <!-- Push password into VM from code-behind -->
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource InputBox_Password}"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             KeyDown="PasswordBox_KeyDown"/>

                <!-- Execute LoginCommand (MVVM) -->
                <Button Content="Login"
                        Command="{Binding LoginCommand}"
                        Style="{DynamicResource SubmitBtn}"
                        Margin="0,15,0,0"/>

                <!-- Show any error from VM -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Style="{DynamicResource errorMessage}"/>

                <Button Content="Forgot password" Margin="0 0 0 20"
                        Click="ForgotPassword_Click"
                        Style="{DynamicResource frGotPassword}"/>
            </StackPanel>
        </Border>

        <uc:ReturnBtn VerticalAlignment="Bottom" Margin="15,0,0,15"/>
        <TextBlock Style="{DynamicResource copyWrite}"/>
    </Grid>
</Window>
