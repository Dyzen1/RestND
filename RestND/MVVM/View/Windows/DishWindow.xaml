<Window x:Class="RestND.MVVM.View.DishWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestND.MVVM.ViewModel"
        xmlns:local="clr-namespace:RestND.MVVM.Model"
        xmlns:uc="clr-namespace:RestND.MVVM.View.UserControls" 
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:conv="clr-namespace:RestND.Converters"
        mc:Ignorable="d"
        Style="{StaticResource windowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- Used to show or hide UI elements based on whether a bound string is empty -->
    <Window.Resources>
        <conv:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Border Style="{DynamicResource windowBorder}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- search bar by dish name -->
            <uc:SearchBar x:Name="DishSearch" Grid.Row="0" Grid.Column="1" 
                          Margin="8 15 0 0" HorizontalAlignment="Left"
                          Placeholder="Search by dish name"/>

            <Expander Style="{DynamicResource sideBarExpander}"
                      Grid.RowSpan="3" Grid.Column="2">
                      <uc:SideBar/>
            </Expander>

            <!-- Add New Dish Section -->
            <GroupBox Header="New Dish Details" Grid.RowSpan="2" Grid.Column="0">
                <StackPanel Orientation="Vertical" Margin="15 0 0 0" HorizontalAlignment="Left">

                    <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                        <Label Content="Dish Name:"/>
                        <TextBox Text="{Binding NewDishNameInput, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                        <Label Content="Dish Price:"/>
                        <TextBox Text="{Binding NewDishPriceInput, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="10 0 0 0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                        <Label Content="Allergen Notes:" Width="120"/>
                        <ListBox ItemsSource="{Binding AllergenOptions}" Width="220">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Value}" 
                                              Foreground="{DynamicResource LightText}"
                                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                        <Label Content="Dish Type:"/>
                        <ListBox ItemsSource="{Binding DishTypes}"
                             SelectedItem="{Binding NewDishTypeInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             DisplayMemberPath="DishType_Name"
                             SelectionMode="Single"
                             Margin="10 0 0 0"
                             Height="120"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                    </StackPanel>

                </StackPanel>
            </GroupBox>


            <GroupBox Header="Products For New Dish" Grid.Row="2" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <uc:SearchBar x:Name="ProductSearch" Grid.Row="0"
                          Placeholder="Search by product name" Margin="3" HorizontalAlignment="Left"/>
                    
                <DataGrid ItemsSource="{Binding ProductSelections}" Grid.Row="1"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          HorizontalAlignment="Stretch" 
                          ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}"
                          RowStyle="{DynamicResource rowStyle}"
                          CellStyle="{DynamicResource cellStyle}">
                    <DataGrid.Columns>
                            <DataGridCheckBoxColumn Width="30"
                            Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGridCheckBoxColumn.Header>
                                <fa:ImageAwesome Icon="CheckSquare" Width="15" Height="15" 
                                                 Foreground="{DynamicResource LightText}"/>
                            </DataGridCheckBoxColumn.Header>
                        </DataGridCheckBoxColumn>

                        <!-- Name (read-only) -->
                        <DataGridTextColumn Header="Product"
                                Binding="{Binding Product_Name}"
                                IsReadOnly="True" Width="*"/>

                        <!-- Stock (read-only, optional but nice) -->
                        <DataGridTextColumn Header="Quantity"
                                Binding="{Binding Quantity_Available}"
                                IsReadOnly="True" Width="*"/>

                        <!-- Amount to use in this dish -->
                        <DataGridTextColumn Header="Amount (gr)"
                                Binding="{Binding AmountUsage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Validation error display -->
            <TextBlock Text="{Binding DishErrorMessage}" Grid.Row="3" 
                       Style="{DynamicResource errorMessage}"
                       Visibility="{Binding DishErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <Button Grid.Column="0" Grid.Row="3" Command="{Binding AddDishCommand}" Margin="0 10 0 0" 
                    Style="{DynamicResource addBtn}" HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Style="{DynamicResource addBtnIcon}"/>
                    <TextBlock Text="Add Dish" FontSize="13" Foreground="{DynamicResource LightText}"
                               Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <!-- Dishes Grid -->
            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="8" 
                    Style="{DynamicResource windowBorder}">
                <DataGrid ItemsSource="{Binding Dishes}" x:Name="DishGrid"
                          SelectedItem="{Binding SelectedDish}" 
                          CellStyle="{DynamicResource cellStyle}"
                          AutoGenerateColumns="False" 
                          RowDetailsVisibilityMode="VisibleWhenSelected"
                          ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Dish" Binding="{Binding Dish_Name}" Width="90"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Dish_Price}" Width="50" />
                        <DataGridTextColumn Header="Allergens" Binding="{Binding Allergen_Notes}" Width="*" />
                        <DataGridTextColumn Header="Dish Type" Binding="{Binding Dish_Type.DishType_Name}" Width="90" />
                    </DataGrid.Columns>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="DetailsVisibility" Value="Collapsed"/>
                            <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource LightText}"/>
                            <Setter Property="BorderThickness" Value="0 0 0 1"/>

                            <!-- toggle on second click -->
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="Row_PreviewMouseLeftButtonDown"/>

                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="DetailsVisibility" Value="Visible"/>
                                    <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
                                    <Setter Property="Background" Value="{DynamicResource LightBG}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <ItemsControl ItemsSource="{Binding ProductUsage}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome Icon="Check" Width="10" Height="10" Margin="0,0,5,0"
                                                           Foreground="{DynamicResource secondaryHeaders}"/>
                                            <TextBlock Text="{Binding Product_Name}" Margin="0,0,5,0"
                                                       Foreground="{DynamicResource secondaryHeaders}"/>
                                            <TextBlock Text="{Binding Amount_Usage, StringFormat={}{0}gr}" 
                                                       Foreground="{DynamicResource secondaryHeaders}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>

                </DataGrid>

            </Border>

            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="0 0 0 30">
                <Button Content="Update Dish" 
                         Click="UpdateDishBtn_Click"
                         Style="{DynamicResource SubmitBtn}"/>

                <Button Content="Delete Dish"
                        Command="{Binding DeleteDishCommand}"
                        Margin="20,0,0,0" Style="{DynamicResource SubmitBtn}"/>
            </StackPanel>

            <!-- Footer -->
            <uc:ReturnBtn x:Name="returnBtn" Grid.Row="3" Grid.Column="0"
                          VerticalAlignment="Bottom" Margin="15,0,0,15"/>
            <TextBlock Style="{DynamicResource copyWrite}" Grid.Row="3" Grid.Column="1" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,15"/>
        </Grid>
    </Border>
</Window>
