<Window x:Class="RestND.MVVM.View.EmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestND.MVVM.ViewModel"
        xmlns:uc ="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:fa="http://schemas.fontawesome.com/icons/svg"
        mc:Ignorable="d"
        Title="Employees"
        Style="{StaticResource windowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!--<Window.DataContext>
        <vm:EmployeesViewModel/>
    </Window.DataContext>-->

    <Border BorderBrush="{DynamicResource LightText}" BorderThickness="3" CornerRadius="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Main content -->
                <RowDefinition Height="60"/>
                <!-- Footer area -->
            </Grid.RowDefinitions>

            <!-- LEFT: Employees -->
            <GroupBox Header="Employees" Grid.Column="0" Grid.Row="0" Margin="8">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                        <TextBox Width="240" Margin="0,0,8,0"
                                 Text="{Binding EmployeeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Search by name, role, or phone"/>
                        <Button Command="{Binding AddEmployeeCommand}" Style="{DynamicResource SubmitBtn}" Margin="0,0,8,0" Click="AddEmployee">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Add" Margin="6,0,0,0" />
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding UpdateEmployeeCommand}" Style="{DynamicResource SubmitBtn}" Margin="0,0,8,0" Click="EditEmployee">
                            <TextBlock Text="Update"/>
                        </Button>
                        <Button Command="{Binding DeleteEmployeeCommand}" Style="{DynamicResource SubmitBtn}" >
                            <TextBlock Text="Delete"/>
                        </Button>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding EmployeesView}"
                              SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Employee_ID}" Width="70"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="160"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </GroupBox>

            <!-- Divider -->
            <Rectangle Grid.Column="1" Grid.Row="0" Fill="{DynamicResource BorderBrush}"
                       Width="1" HorizontalAlignment="Center"/>

            <!-- RIGHT: Orders -->
            <GroupBox Header="Employee Orders" Grid.Column="2" Grid.Row="0" Margin="8">
                <TabControl>
                    <TabItem Header="In Progress">
                        <DataGrid ItemsSource="{Binding EmployeeOrdersInProgress}" AutoGenerateColumns="False"
                                  HeadersVisibility="Column" ColumnHeaderStyle="{DynamicResource dataGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                                <DataGridTextColumn Header="Order #" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                <DataGridTextColumn Header="Started" Binding="{Binding StartedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Finished">
                        <DataGrid ItemsSource="{Binding EmployeeOrdersFinished}" AutoGenerateColumns="False"
                                  HeadersVisibility="Column" ColumnHeaderStyle="{DynamicResource dataGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                                <DataGridTextColumn Header="Order #" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                <DataGridTextColumn Header="Started" Binding="{Binding StartedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Finished" Binding="{Binding FinishedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </GroupBox>

            <!-- Footer -->
            <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Return Button -->
                    <ColumnDefinition Width="*"/>
                    <!-- Spacer -->
                </Grid.ColumnDefinitions>

                <!-- Return Button on the left -->
                <uc:ReturnBtn Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,18"/>

                <!-- Copyright centered -->
                <TextBlock Grid.Column="1"
                           Style="{DynamicResource copyWrite}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- OVERLAY (for dim background during popups) -->
            <Border x:Name="Overlay"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    Background="#80000000"
                    Visibility="Collapsed"
                    Panel.ZIndex="99"/>
        </Grid>
    </Border>
</Window>
