<Window x:Class="RestND.MVVM.View.EmployeesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestND.MVVM.ViewModel"
        xmlns:uc ="clr-namespace:RestND.MVVM.View.UserControls"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        xmlns:conv="clr-namespace:RestND.Converters"
        mc:Ignorable="d"
        Title="Employees"
        Style="{StaticResource windowStyle}"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.DataContext>
        <vm:EmployeeViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <conv:PermissionToEnabledConverter x:Key="CanManageEmployees" Required="Employees"/>
    </Window.Resources>

    <Border Style="{DynamicResource windowBorder}">
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="110"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Expander Style="{DynamicResource sideBarExpander}"
                    Grid.RowSpan="3" Grid.Column="2">
                <uc:SideBar/>
            </Expander>

            <!-- LEFT: Employees -->
            <GroupBox Header="Employees" Grid.Column="0" Grid.Row="0" Margin="8">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
                        <Button Command="{Binding AddEmployeeCommand}"
                                Style="{DynamicResource SubmitBtn}"
                                Margin="0,0,8,0"
                                Click="AddEmployee"
                                IsEnabled="{Binding Converter={StaticResource CanManageEmployees}}">
                            <TextBlock Text="Add"/>
                        </Button>

                        <Button Style="{DynamicResource SubmitBtn}"
                                Margin="0,0,8,0"
                                Click="EditEmployee"
                                IsEnabled="{Binding Converter={StaticResource CanManageEmployees}}">
                            <TextBlock Text="Update"/>
                        </Button>

                        <Button Command="{Binding DeleteEmployeeCommand}"
                                Style="{DynamicResource SubmitBtn}"
                                IsEnabled="{Binding Converter={StaticResource CanManageEmployees}}">
                            <TextBlock Text="Delete"/>
                        </Button>

                        <Button Style="{DynamicResource SubmitBtn}"
                                Margin="10,0,8,0"
                                Click="OpenRoles_Click"
                                IsEnabled="{Binding Converter={StaticResource CanManageEmployees}}">
                            <TextBlock Text="New Role"/>
                        </Button>

                        <uc:SearchBar
                            x:Name="EmployeeSearchBar"
                            Placeholder="Search Employees"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left" />
                        
                    </StackPanel>
                    

                    <DataGrid ItemsSource="{Binding Employees}"
                              SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                              RowStyle="{DynamicResource rowStyle}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}" 
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Employee_ID}" Width="100"/>
                            <DataGridTextColumn Header="First Name" Binding="{Binding Employee_Name}" Width="*"/>
                            <DataGridTextColumn Header="Last Name" Binding="{Binding Employee_LastName}" Width="*"/>
                            <DataGridTextColumn Header="Role" Binding="{Binding Employee_Role.Role_Name}" Width="160"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </GroupBox>

            <!-- Divider -->
            <Rectangle Grid.Column="1" Grid.Row="0" Fill="{DynamicResource BorderBrush}"
                       Width="1" HorizontalAlignment="Center"/>

            <!-- RIGHT: Orders -->
            <GroupBox Header="Employee Orders" Grid.Column="1" Grid.Row="0" Margin="8">
                <TabControl>
                    <TabItem Header="In Progress">
                        <DataGrid ItemsSource="{Binding EmployeeOrdersInProgress}" AutoGenerateColumns="False"
                                  RowStyle="{DynamicResource rowStyle}"
                                  HeadersVisibility="Column" ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}"
                                  IsReadOnly="True"
                                  
                                  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                                <DataGridTextColumn Header="Order #" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                <DataGridTextColumn Header="Started" Binding="{Binding StartedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Finished">
                        <DataGrid ItemsSource="{Binding EmployeeOrdersFinished}" AutoGenerateColumns="False"
                                  HeadersVisibility="Column" ColumnHeaderStyle="{StaticResource dataGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee" Binding="{Binding EmployeeName}" Width="*"/>
                                <DataGridTextColumn Header="Order #" Binding="{Binding OrderId}" Width="100"/>
                                <DataGridTextColumn Header="Table" Binding="{Binding TableNumber}" Width="90"/>
                                <DataGridTextColumn Header="Started" Binding="{Binding StartedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Finished" Binding="{Binding FinishedAt, StringFormat=\{0:dd/MM HH:mm\}}" Width="140"/>
                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </GroupBox>

            <!-- Overlay -->
            <Border x:Name="Overlay"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    Background="#80000000"
                    Visibility="Collapsed"
                    Panel.ZIndex="99"/>

            <uc:ReturnBtn x:Name="returnBtn" Grid.Column="0" Grid.Row="1"/>
            <TextBlock Grid.ColumnSpan="3" Grid.Row="1" 
                       VerticalAlignment="Bottom"  HorizontalAlignment="Center"
                       Style="{DynamicResource copyWrite}"/>

        </Grid>
    </Border>
</Window>
