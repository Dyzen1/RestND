<Window x:Class="RestND.MVVM.View.DishView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RestND.MVVM.ViewModel"
        xmlns:local="clr-namespace:RestND.MVVM.Model"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Manage Dishes" Height="600" Width="900">

    <!-- Resources for Enum Binding -->
    <Window.Resources>
        <ObjectDataProvider x:Key="DishTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:DishType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <Window.DataContext>
        <vm:DishViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Add New Dish Section -->
        <GroupBox Header="Create New Dish" Margin="0,0,0,10" Padding="10">
            <StackPanel Orientation="Vertical" Margin="5">

                <!-- Dish Name -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Dish Name:" Width="100"/>
                    <TextBox Text="{Binding NewDish.Dish_Name, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>

                <!-- Dish Price -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Dish Price:" Width="100"/>
                    <TextBox Text="{Binding NewDish.Dish_Price, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>

                <!-- Allergen Notes -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Allergen Notes:" Width="100"/>
                    <TextBox Text="{Binding NewDish.Allergen_Notes, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>

                <!-- Availability Status -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Available:" Width="100"/>
                    <CheckBox IsChecked="{Binding NewDish.Availability_Status, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Dish Type -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Dish Type:" Width="100"/>
                    <ComboBox ItemsSource="{Binding Source={StaticResource DishTypeValues}}"
                              SelectedItem="{Binding NewDish.Dish_Type, UpdateSourceTrigger=PropertyChanged}"
                              Width="200"/>
                </StackPanel>

                <Separator Margin="0,10"/>

                <!-- Select Product to Add -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Select Product:" Width="100"/>
                    <ComboBox ItemsSource="{Binding AvailableProducts}" 
                              SelectedItem="{Binding SelectedAvailableProduct}" 
                              DisplayMemberPath="Product_Name"
                              Width="200"/>
                </StackPanel>

                <!-- Enter Amount Usage -->
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Amount Usage:" Width="100"/>
                    <TextBox Text="{Binding ProductAmountUsage, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                </StackPanel>

                <!-- Add Product Button -->
                <Button Content="Add Product to Dish" 
                        Command="{Binding AddProductToDishCommand}" 
                        Margin="0,10,0,0" Width="150"/>

                <Separator Margin="0,10"/>

                <!-- Save Dish Button -->
                <Button Content="Save Dish" 
                        Command="{Binding AddDishCommand}" 
                        Margin="0,10,0,0" Width="150"/>
            </StackPanel>
        </GroupBox>

        <!-- Existing Dishes List -->
        <GroupBox Header="Existing Dishes" Grid.Row="2" Padding="10">
            <ListBox ItemsSource="{Binding Dishes}" 
                     SelectedItem="{Binding SelectedDish}"
                     DisplayMemberPath="Dish_Name"/>
        </GroupBox>

    </Grid>
</Window>
