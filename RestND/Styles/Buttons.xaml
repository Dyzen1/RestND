<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<!--NOT ALL OF THE STYLES ARE BTNs, SOME ARE DESTINED TO BE INSIDE IT-->
    <Style x:Key="SideBarBtn" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="SubmitBtn" TargetType="Button">
        <Setter Property="Background" Value="#7CB342"/>
        <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LightText}"/>
    </Style>

    <Style x:Key="DishBtn" TargetType="Button">
        <Setter Property="Background" Value="LightGray"/>
        <Setter Property="Foreground" Value="{DynamicResource LightText}"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Width" Value="35"/>
        <Setter Property="Margin" Value="4,4,4,4"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="{DynamicResource LightText}"/>
    </Style>

    <Style x:Key="tableBtn" TargetType="Image">
        <Setter Property="Source" Value="\Styles\Assets\table.png"/>
    </Style>

    <Style x:Key="addBtn" TargetType="Button">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="updateBtn" TargetType="Button">
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="Content" Value="Update"/>
    </Style>

    <Style x:Key="tableNumber" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
</ResourceDictionary>