<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa6="http://schemas.fontawesome.com/icons/svg">

    <Style x:Key="SideBarIcon" TargetType="fa6:SvgAwesome">
        <Setter Property="Width" Value="15"/>
        <Setter Property="PrimaryColor" Value="{DynamicResource LightText}"/>
    </Style>

    <Style x:Key="returnBtnIcon" TargetType="fa6:SvgAwesome">
        <Setter Property="Icon" Value="Solid_ArrowLeft"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="15"/>
    </Style>

    <Style x:Key="addBtnIcon" TargetType="fa6:SvgAwesome">
        <Setter Property="Icon" Value="Solid_CirclePlus"/>
        <Setter Property="PrimaryColor" Value="{DynamicResource LightText}"/>
        <Setter Property="Width" Value="15"/>
    </Style>

</ResourceDictionary>
