<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkText" Color="#131d23"/> <!--a dark color-->
    <SolidColorBrush x:Key="LightText" Color="#d5f5e3"/> <!--most of the text in the pages-->
    <SolidColorBrush x:Key="CardBG" Color="#2a332e"/> <!--background for cards & in the page-->
    <SolidColorBrush x:Key="ErrorMsg" Color="#C62828"/> <!--for error text messages-->
    <SolidColorBrush x:Key="LightBG" Color="LightGoldenrodYellow"/> <!--for mouse hover bg-->
    <SolidColorBrush x:Key="secondaryHeaders" Color="Gray"/>
    <SolidColorBrush x:Key="secondaryBtns" Color="#7CB342"/> <!--for some of the icons-->
    <SolidColorBrush x:Key="DividerBrush" Color="#40FFFFFF"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#2D89EF"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#40FFFFFF"/>
    <SolidColorBrush x:Key="CancelBtn" Color="#DC3545"/><!--for cancel buttons-->
    <SolidColorBrush x:Key="hoverColor" Color="#2A2A2A"/>

</ResourceDictionary>