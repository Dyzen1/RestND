<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="DarkText" Color="#212121"/> 
    <SolidColorBrush x:Key="LightText" Color="#757575"/> <!--most of the text in the pages-->
    <SolidColorBrush x:Key="PageBG" Color="#FFF8E1"/> <!--background color for the pages-->
    <SolidColorBrush x:Key="Divider" Color="#E0E0E0"/> <!--a section divider in the page-->
    <SolidColorBrush x:Key="CardBG" Color="#FFFF"/> <!--background for sections in the page-->
    <SolidColorBrush x:Key="NavBar" Color="#8D6E63"/> <!--text color for secondary headlines-->
    <SolidColorBrush x:Key="ErrorMsg" Color="#C62828"/> <!--for error text messages-->
    <SolidColorBrush x:Key="Hover" Color="LightGoldenrodYellow"/> <!--for mouse hover bg-->

</ResourceDictionary>